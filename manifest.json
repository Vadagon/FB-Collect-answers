{
  "name": "Group Answers Collector for Facebookâ„¢",
  "short_name": "FB",
  "version": "4",
  "manifest_version": 2,
  "description": "Extract answers of member requests to a Google Sheet",
  "icons": {
    "128": "icons/group-answers.png"
  },
  "browser_action": {

  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "src/bg/main.js"
    ]
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["src/inject/inject.css"],
      "js": ["js/jquery.min.js", "src/inject/inject.js"]
    }
  ]
}