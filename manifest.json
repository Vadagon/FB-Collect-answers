{
  "name": "GMAC - Group Answers Collector For FBâ„¢",
  "short_name": "GMAC",
  "version": "2.0.2",
  "manifest_version": 2,
  "description": "Export users' answers to Google Sheets",
  "icons": {
    "128": "img/logo_128.png",
    "16": "img/logo_16.png",
    "48": "img/logo_48.png"
  },
  "browser_action": {
    "default_popup": "pages/popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "src/bg/main.js"
    ],
    "persistent": true
  },
  "permissions": [
    "background",
    "identity",
    "storage"
  ],
  "oauth2": {
    "client_id": "708115076090-7e494247b7077ap3rg7eg4uculrifvfc.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["src/inject/inject.css"],
      "js": ["js/jquery.min.js", "src/inject/inject.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}