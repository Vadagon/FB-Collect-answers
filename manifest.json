{
  "name": "Social Media Collectior",
  "version": "2",
  "manifest_version": 2,
  "description": "Description for the project",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "src/bg/main.js"
    ],
    "persistent": true
  },
  "permissions": [
    "background",
    "identity",
    "storage"
  ],
  "oauth2": {
    "client_id": "708115076090-7e494247b7077ap3rg7eg4uculrifvfc.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "css": ["src/inject/inject.css"],
      "js": ["js/jquery.min.js", "src/inject/inject.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}
