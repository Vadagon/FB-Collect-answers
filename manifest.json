{
  "name": "FB Group Answers Collector",
  "short_name": "FB",
  "version": "1",
  "manifest_version": 2,
  "description": "Export answers from Facebook group to google spreadsheed",
  "icons": {
    "128": "icons/icon128.png"
  },
  "browser_action": {

  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "src/bg/main.js"
    ],
    "persistent": true
  },
  "permissions": [
    "background",
    "identity",
    "storage",
    "identity.email"
  ],
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["src/inject/inject.css"],
      "js": ["js/jquery.min.js", "src/inject/inject.js"]
    }
  ]
}